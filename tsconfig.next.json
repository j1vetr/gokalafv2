{
  "extends": "./tsconfig.json",
  "include": [
    "app/**/*",
    "components/**/*",
    "lib/**/*",
    "shared/**/*",
    ".next/types/**/*.ts",
    "next-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "client/**/*",
    "server/**/*",
    "dist",
    "build"
  ],
  "compilerOptions": {
    "paths": {
      "@/*": ["./*"],
      "@shared/*": ["./shared/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  }
}
